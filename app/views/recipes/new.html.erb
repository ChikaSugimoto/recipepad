<div class="topic-new-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h1 class="text-center">Add Recipe</h1>
                <%= form_for @recipe do |f| %>


                <div class="form-group">
                    <%= f.label :料理名 %>
                    <%= f.text_area :name, class: 'form-control' %>
                </div>

                <div class="form-group">
                    <%= f.label :写真 %>
                    <%= f.file_field :main_image %>
                </div>

                <div class="form-group">
                    <%= f.label :紹介文 %>
                    <%= f.text_area :description, class: 'form-control' %>
                </div>

                <div class="form-group">
                    <%= f.label :材料 %>
                    <%= f.text_area :ingredient, class: 'form-control' %>
                </div>

                <div class="form-group">
                    <%= f.label :作った背景 %>
                    <%= f.text_area :situation, class: 'form-control' %>
                </div>

                <div class="form-group">
                    <%= f.label :コツ・ポイント %>
                    <%= f.text_area :point, class: 'form-control' %>
                </div>

    
                <div class="form-direction">
                        <div>
                            <h2>1</h2>
                        </div>
                        <div>
                            <%= f.label :作り方 %>
                            <%= f.text_area :direction_comment_1, class: 'form-control' %>
                        </div>
                        <div>
                            <%= f.label :写真 %>
                            <%= f.file_field :direction_image_1 %>
                        </div>
                    </div>
    

                <div class="form-direction">
                        <div>
                            <h2>2</h2>
                        </div>
                        <div>
                            <%= f.label :作り方 %>
                            <%= f.text_area :direction_comment_2, class: 'form-control' %>
                        </div>
                        <div>
                            <%= f.label :写真 %>
                            <%= f.file_field :direction_image_2 %>
                        </div>
                    </div>
    
    
                <div class="form-direction">
                    <div>
                        <h2>3</h2>
                    </div>
                    <div>
                        <%= f.label :作り方 %>
                        <%= f.text_area :direction_comment_3, class: 'form-control' %>
                    </div>
                    <div>
                        <%= f.label :写真 %>
                        <%= f.file_field :direction_image_3 %>
                    </div>
                </div>

                <%= f.submit '投稿', class: 'btn btn-black btn-block' %>

                <% end %>
            </div>
        </div>
    </div>
</div>