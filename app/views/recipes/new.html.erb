<div class="topic-new-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h1 class="text-center">Add Recipe</h1>
                <%= form_for @recipe do |f| %>

                <div class="form-group">
                    <%= f.label :料理名 %>
                    <%= f.text_area :name, class: 'form-control' %>
                </div>

                <div class="form-group">
                    <%= f.label :写真 %>
                    <%= f.file_field :main_image %>
                </div>

                <div class="form-group">
                    <%= f.label :紹介文 %>
                    <%= f.text_area :description, class: 'form-control' %>
                </div>

                <div class="form-group">
                    <%= f.label :材料 %>
                    <%= f.text_area :ingredient, class: 'form-control' %>
                </div>

                <div class="form-group">
                    <%= f.label :作った背景 %>
                    <%= f.text_area :situation, class: 'form-control' %>
                </div>

                <div class="form-group">
                    <%= f.label :コツ・ポイント %>
                    <%= f.text_area :point, class: 'form-control' %>
                </div>

    

                <%= f.submit '投稿', class: 'btn btn-black btn-block' %>

                <% end %>
            </div>
        </div>
    </div>
</div>