<div class="topic-new-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h1 class="text-center function-name">Add Recipe</h1>

                <%= form_tag("/recipes", method: :post, multipart: true) do %>
                <div class="form-group">
                    <%= label_tag '料理名' %>
                    <%= text_field_tag 'recipe[name]' ,'',class: 'form-control'%>
                </div>

                <div class="form-group">
                    <%= label_tag '写真' %>
                    <%= file_field_tag 'recipe[main_image]' %>
                </div>

                <div class="form-group">
                    <%= label_tag '紹介文' %>
                    <%= text_area_tag 'recipe[description]','',class: 'form-control' %>
                </div>

                <div class="form-group">
                    <%= label_tag '材料' %>
                    <%= text_area_tag 'recipe[ingredient]' ,'',class: 'form-control'%>
                </div>

                <div class="form-group">
                    <%= label_tag '作った背景' %>
                    <%= text_area_tag 'recipe[situation]','',class: 'form-control' %>
                </div>

                <div class="form-group">
                    <%= label_tag 'コツ・ポイント' %>
                    <%= text_area_tag 'recipe[point]' ,'',class: 'form-control'%>
                </div>

                <div class="form-direction">
                    <div>
                        <h2>1</h2>
                        <%= hidden_field_tag :number , :value => 1 %>
                    </div>
                    <div>
                        <%= label_tag '作り方' %>
                        <%= text_area_tag 'direction1[comment]','',class: 'form-control' %>
                    </div>
                    <div>
                        <%= label_tag '写真' %>
                        <%= file_field_tag 'direction[image]' %>
                    </div>

                    <div>
                        <h2>2</h2>
                        <%= hidden_field_tag :number , :value => 2 %>
                    </div>
                    <div>
                        <%= label_tag '作り方' %>
                        <%= text_area_tag 'direction2[comment]','',class: 'form-control' %>
                    </div>
                    <div>
                        <%= label_tag '写真' %>
                        <%= file_field_tag 'direction[image]' %>
                    </div>
                </div>

                <%= submit_tag  '送信', class: 'btn btn-black btn-block' %>
                <% end %>

            </div>
        </div>
    </div>
</div>